@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li> Genre: @Model.GenreType.Name</li>
    <li> Release Date: @Html.DisplayFor(m => m.ReleaseDate)</li>
    <li> Date Added: @Html.DisplayFor( m => m.DateAdded )</li>
    <li> Number in Stock: @Model.NumberInStock</li>
</ul>

